---

import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/Briefcase.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
import Hero from "../components/Presentation.astro";
import AboutMe from "../components/AboutMe.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Layout from "../layouts/Layout.astro";
import Presentation from "../components/Presentation.astro";
---

<Layout
  title="dacm - dev portfolio"
  description="Desarrollador backend -> JAVA, Spring Boot, JUnit."
>
  <main class="px-4">
    
    <SectionContainer class="py-16">
      <Presentation />
    </SectionContainer>
   <div class="space-y-20">
    <!-- Experience -->
    <SectionContainer id="experiencia">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Briefcase class="size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
      class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        Sobre m√≠
      </h2>
      <AboutMe />
    </SectionContainer>
  
  </main>
 
  </div>
